{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist_electron",
    "rootDir": "client-src",
    "types": ["node"]
  },
  "include": ["client-src/**/*"],
  "exclude": ["node_modules", "dist", "dist_electron"]
}
