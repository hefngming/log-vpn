<Window x:Class="LogVPN.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogVPN - 登录" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="#FFFFFF"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Grid>
        <!-- 背景渐变 -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1E1E" Offset="0"/>
                <GradientStop Color="#2D2D2D" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 圆角边框 -->
        <Border CornerRadius="10" Background="#252525" BorderThickness="1" BorderBrush="#404040">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="380">
                <!-- 标题 -->
                <StackPanel HorizontalAlignment="Center" Margin="0,30,0,20">
                    <TextBlock Text="LogVPN" FontSize="32" FontWeight="Bold" 
                               Foreground="#9C27B0" TextAlignment="Center"/>
                    <TextBlock Text="安全 · 快速 · 全球" FontSize="12" 
                               Foreground="#AAAAAA" TextAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- 登录表单 -->
                <StackPanel Margin="30,0,30,30">
                    <!-- 邮箱输入框 -->
                    <TextBlock Text="邮箱地址" FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                    <TextBox x:Name="EmailTextBox" Height="40" Padding="12,10"
                             Background="#2D2D2D" Foreground="#FFFFFF"
                             BorderThickness="1" BorderBrush="#404040"
                             FontSize="12" Margin="0,0,0,15"/>

                    <!-- 密码输入框 -->
                    <TextBlock Text="密码" FontSize="12" Foreground="#CCCCCC" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" Height="40" Padding="12,10"
                                 Background="#2D2D2D" Foreground="#FFFFFF"
                                 BorderThickness="1" BorderBrush="#404040"
                                 FontSize="12" Margin="0,0,0,15"/>

                    <!-- 记住密码 -->
                    <CheckBox x:Name="RememberPasswordCheckBox" Content="记住密码" 
                              Foreground="#AAAAAA" Margin="0,0,0,20"/>

                    <!-- 登录按钮 -->
                    <Button x:Name="LoginButton" Content="登录" Height="45"
                            Background="#9C27B0" Foreground="#FFFFFF"
                            FontSize="14" FontWeight="Bold"
                            Click="LoginButton_Click"
                            Cursor="Hand"/>

                    <!-- 注册链接 -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,20,0,0" Orientation="Horizontal">
                        <TextBlock Text="还没有账号？" Foreground="#AAAAAA" FontSize="12"/>
                        <Button Content="立即注册" Background="Transparent" Foreground="#9C27B0"
                                FontSize="12" Padding="5,0" Click="RegisterButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>

                    <!-- 忘记密码链接 -->
                    <Button Content="忘记密码？" Background="Transparent" Foreground="#9C27B0"
                            FontSize="12" HorizontalAlignment="Right" Padding="5,0"
                            Click="ForgotPasswordButton_Click" Cursor="Hand"/>
                </StackPanel>

                <!-- 错误提示 -->
                <TextBlock x:Name="ErrorMessage" Text="" Foreground="#FF6B6B"
                           FontSize="12" TextAlignment="Center" Margin="30,0,30,20"
                           TextWrapping="Wrap"/>

                <!-- 加载指示器 -->
                <ProgressBar x:Name="LoadingProgress" Height="2" Background="Transparent"
                             Foreground="#9C27B0" Margin="0,0,0,20" IsIndeterminate="False"/>
            </StackPanel>
        </Border>

        <!-- 关闭按钮 -->
        <Button x:Name="CloseButton" Content="×" Width="30" Height="30"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Background="Transparent" Foreground="#FFFFFF"
                FontSize="20" Click="CloseButton_Click"
                Cursor="Hand" Margin="10"/>
    </Grid>
</Window>
