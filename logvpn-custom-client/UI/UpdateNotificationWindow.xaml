<Window x:Class="LogVPN.UI.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogVPN 更新提示" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        Foreground="#E0E0E0"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/logo.ico">
    <Grid Background="#1E1E2E">
        <StackPanel VerticalAlignment="Stretch" Margin="20">
            <!-- 标题 -->
            <TextBlock Text="发现新版本" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#A855F7"
                       Margin="0,0,0,15"/>
            
            <!-- 版本信息 -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="当前版本: 1.0.0" Margin="0,0,0,5"/>
                <TextBlock x:Name="NewVersionText" 
                           Text="新版本: 1.0.1" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="ReleaseDateText" 
                           Text="发布时间: 2024-01-20" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="FileSizeText" 
                           Text="文件大小: 45.5 MB" 
                           Margin="0,0,0,10"/>
            </StackPanel>
            
            <!-- 发布说明 -->
            <TextBlock Text="更新说明:" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="ReleaseNotesBox"
                     Height="80"
                     Background="#2D2D3D"
                     Foreground="#E0E0E0"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,0,0,15"
                     Padding="10"/>
            
            <!-- 下载进度 -->
            <StackPanel x:Name="ProgressPanel" Visibility="Collapsed" Margin="0,0,0,15">
                <TextBlock Text="正在下载..." Margin="0,0,0,5"/>
                <ProgressBar x:Name="DownloadProgress" 
                             Height="20" 
                             Foreground="#A855F7"
                             Background="#2D2D3D"/>
                <TextBlock x:Name="ProgressText" 
                           Text="0%" 
                           Margin="0,5,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
            
            <!-- 按钮 -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0">
                <Button x:Name="UpdateButton"
                        Content="立即更新"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#A855F7"
                        Foreground="White"
                        FontSize="14"
                        Click="UpdateButton_Click"
                        Cursor="Hand"/>
                
                <Button x:Name="LaterButton"
                        Content="稍后更新"
                        Width="100"
                        Height="35"
                        Background="#2D2D3D"
                        Foreground="#E0E0E0"
                        FontSize="14"
                        Click="LaterButton_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
